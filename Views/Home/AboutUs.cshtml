    <style>
        /* Center website */
        .main {
            width: 80%;
            margin: auto;
            padding-top: 20px;
            padding-bottom: 10px; /* Add padding at the bottom */
        }

        header {
            background-color: green;
            padding: 2px;
        }

        h1 {
            color: white;
            padding: 20px;
            text-align: center;
        }

        p {
            color: black;
        }

        h2 {
            color: white;
            text-align: center;
        }

        h3 {
            color: black;
        }

        .row {
            margin: 8px -16px;
        }

            /* Add padding BETWEEN each column */
            .row,
            .row > .column {
                padding: 10px;
            }

        /* Create four equal columns that float next to each other */
        .column {
            float: left;
            width: 23%;
            border: 2px solid black; /* Set border color to black */
            border-radius: 5px; /* Add border radius for a rounded look */
            overflow: hidden; /* Hide overflowing content */
            margin: 10px; /* Add margin for spacing between columns */
            padding: 10px; /* Add padding inside the columns */
            background-color: white; /* Set background color to white */
        }

        /* Clear floats after rows */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }

        /* Content */


        /* Style navigation bar */
        nav {
            background-color: #444;
            padding: 10px;
        }

            nav ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
                display: flex; /* Use flexbox for horizontal layout */
            }

                nav ul li {
                    margin-right: 5px;
                }

                    nav ul li:last-child {
                        margin-right: 0; /* Remove margin for the last item */
                    }

                    nav ul li a {
                        color: white;
                        text-decoration: none;
                        padding: 10px;
                    }

        /* Center image */
        .center-image {
            text-align: center;
        }

            .center-image img {
                display: inline-block;
            }
    </style>
</head>
